<button type="button" class="btn btn-primary" data-toggle="modal"
        data-target="#deleteCategoryName{{id}}">
    {{#str}}delete, block_exaquest {{/str}}
</button>

<!-- Modal -->
<div class="modal fade" id="deleteCategoryName{{id}}" data-backdrop="static" data-keyboard="false"
     tabindex="-1" aria-labelledby="changeStatusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">{{#str}}delete, block_exaquest {{/str}}</h5>
                <button type="button" class="close btn-sm" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body col-auto">
                <div class="form-group form-check">
                    <input class="form-check-input" type="checkbox" name="deleteid" value="{{id}}" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        {{#str}}delete_check, block_exaquest {{/str}}
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" formaction="{{action}}" value="Delete"
                        class="btn btn-primary deleteName{{id}}">
                    {{#str}}submit, block_exaquest {{/str}}
                </button>
            </div>
        </div>
    </div>
</div>