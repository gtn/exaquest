<!-- using bootstrap modals to do the popups https://getbootstrap.com/docs/4.6/components/modal/ -->

<button class="btn btn-primary w-100" data-toggle="modal" data-target="#assignQuizModal{{quizid}}">
    {{#str}}assign_addquestions, block_exaquest {{/str}}
    <!--    <i class="icon fa fa-plus fa-fw "></i>-->
</button>
<div class="modal fade" id="assignQuizModal{{quizid}}" tabindex="-1"
     aria-labelledby="assignQuizModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{#str}}assign_addquestions, block_exaquest {{/str}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="{{action}}" id="assignaddquestionsform{{quizid}}">
                <input type="hidden" id="quizid" name="quizid" value={{quizid}}>
                <div class="modal-body">
                    <div class="form-group">{{#str}}
                        assign_addquestions_label, block_exaquest {{/str}}
                        {{{ fp_autocomplete_html }}}
                    </div>
                    <br>
                    <div class="form-group">{{#str}}
                        assign_addquestions_label, block_exaquest {{/str}}
                        {{{ pmw_autocomplete_html }}}
                    </div>
                    <div class="form-group">
                        <textarea class="form-control assignaddquestionscomment" name="assignaddquestionscomment" id="assignaddquestionscomment"
                                  rows="3"
                                  placeholder="{{#str}}assign_addquestions_comment_placeholder, block_exaquest {{/str}}"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit"
                           value="{{#str}} request_questions_button, block_exaquest {{/str}}"
                           class="btn btn-primary assignaddquestionssubmit">
                </div>
            </form>
        </div>
    </div>
</div>

