<div id="exaquest">
    <!--    TODOs-->
    <div class="dashboardcard">
        <p>{{#str}}todos_title, block_exaquest {{/str}}</p>
        <p>{{#str}}questions_overview_title, block_exaquest {{/str}}</p>
        <ul>
            <li>
                {{#questions_for_me_to_create_popup}}
                    {{>block_exaquest/popup_questions_for_me_to_create}}
                {{/questions_for_me_to_create_popup}}

            </li>
            <li>
                <a class="link" href={{questions_for_me_to_review_link}}> {{questions_for_me_to_review_count}} {{#str}}
                    questions_for_me_to_review, block_exaquest {{/str}}</a>
            </li>
            <li>
                <a class="link" href={{questions_for_me_to_revise_link}}>{{questions_for_me_to_revise_count}} {{#str}}
                    questions_for_me_to_revise, block_exaquest {{/str}}</a>
            </li>
            <li>
                <a class="link" href={{questions_for_me_to_release_link}}>{{questions_for_me_to_release_count}} {{#str}}
                    questions_for_me_to_release, block_exaquest {{/str}}</a>
            </li>
        </ul>
        {{#request_questions_popup}}
            {{>block_exaquest/popup_request_questions}}
        {{/request_questions_popup}}
    </div>

    <!--    General Information-->
    <div class="dashboardcard">
        <p>{{#str}}questions_overview_title, block_exaquest {{/str}}</p>
        <ul>
            <li>
                {{questions_count}} {{#str}}questions_overall_count, block_exaquest {{/str}}
            </li>
            <li>
                {{questions_to_review_count}} {{#str}}questions_to_review_count, block_exaquest {{/str}}
            </li>
            <li>
                {{questions_finalised_count}} {{#str}}questions_reviewed_count, block_exaquest {{/str}}
            </li>
            <li>
                {{questions_released_count}} {{#str}}questions_released_count, block_exaquest {{/str}}
            </li>
            <li>
                {{questions_released_and_to_review_count}} {{#str}}
                questions_released_and_to_review_count, block_exaquest {{/str}}
            </li>
        </ul>
    </div>

    <!--    Meine Fragen-->
    <div class="dashboardcard" id="my_questions_dashboardcard">
        <p>{{#str}}my_questions_title, block_exaquest {{/str}}</p>
        <ul>
            <li>
                {{my_questions_count}} {{#str}}my_questions_count, block_exaquest {{/str}}
            </li>
            <li>
                {{my_questions_to_review_count}} {{#str}}my_questions_to_review_count, block_exaquest {{/str}}
            </li>
            <li>
                {{my_questions_finalised_count}} {{#str}}my_questions_finalised_count, block_exaquest {{/str}}
            </li>
        </ul>
        {{#capabilities}}
            {{#createquestions}}
                <!-- createquestions is a key in the capabilities array.. if it is false: don't show, if it is true: show-->
                <div id="dashboard_create_questions_div"></div>
            {{/createquestions}}
        {{/capabilities}}
    </div>

    <!--    Prüfungen-->
    <div class="dashboardcard">
        <p>{{#str}}examinations_title, block_exaquest {{/str}}</p>
        <p>{{#str}}list_of_exams_with_status, block_exaquest {{/str}}</p>
        <ul>
            {{#exams}}
                <li>{{name}} {{status}}exam x</li>
            {{/exams}}
        </ul>
        <button class="btn btn-secondary">{{#str}}create_new_exam_button, block_exaquest {{/str}}</button>
    </div>



    <!--    Statistik-->
    <div class="dashboardcard">
        <p>{{#str}}statistics_title, block_exaquest {{/str}}</p>
        <p>{{#str}}compare_questions, block_exaquest {{/str}}</p>
        {{>block_exaquest/compare_questions}}
    </div>


