<!-- using bootstrap modals to do the popups https://getbootstrap.com/docs/4.6/components/modal/ -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#changeStatusModal{{questionbankentryid}}">
    {{name}}
</button>

<!-- Modal -->
<div class="modal fade" id="changeStatusModal{{questionbankentryid}}" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="changeStatusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">{{title}}</h5>
                <button type="button" class="close btn-sm" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                <div class="modal-body col-auto">
                    <p>{{text}}</p>
                    <div class="form-check">
                        {{#readonlyusers}}
                            <input type="checkbox" disabled readonly checked id={{id}} class="userselectioncheckbox{{questionbankentryid}} form-check-input"
                                   name="selectedusers[{{id}}]" value={{id}}>
                            <label class="form-check-label" for="selectedusers[{{id}}]">{{firstname}} {{lastname}}</label>
                        {{/readonlyusers}}
                        {{#selectusers}}
                            <input type="checkbox" checked id={{id}} class="userselectioncheckbox{{questionbankentryid}} form-check-input"
                                   name="selectedusers[{{id}}]" value={{id}}>

                            <label class="form-check-label" for="selectedusers[{{id}}]">{{firstname}} {{lastname}}</label>
                        {{/selectusers}}
                        <br>
                        <p>{{send_to_pk_text}}</p>
                        <br>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Write a comment</label>
                        <textarea class="form-control commenttext{{questionbankentryid}}" name="commenttext" id="texta" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" value="{{action}}" class="btn btn-primary changestatus{{questionbankentryid}} {{#require}}disable{{questionbankentryid}}{{/require}}" >Request</button>
                </div>
        </div>
    </div>
</div>