<button type="button" class="btn btn-primary" data-toggle="modal"
        data-target="#editCategoryName{{id}}">
    {{#str}}edit, block_exaquest {{/str}}
</button>

<!-- Modal -->
<div class="modal fade" id="editCategoryName{{id}}" data-backdrop="static" data-keyboard="false"
     tabindex="-1" aria-labelledby="changeStatusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">{{#str}}edit, block_exaquest {{/str}}</h5>
                <button type="button" class="close btn-sm" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body col-auto">
                <div class="form-group">
                    <input class="form-control" name="editedname[{{id}}]"
                           id="texta"
                           value="{{categoryname}}">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" formaction="{{edit}}" value="Edit"
                        class="btn btn-primary editName{{id}}">
                    {{#str}}submit, block_exaquest {{/str}}
                </button>
            </div>
        </div>
    </div>
</div>