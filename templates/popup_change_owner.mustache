<!-- using bootstrap modals to do the popups https://getbootstrap.com/docs/4.6/components/modal/ -->




<button id=openModalButton{{questionbankentryid}} type="button" class="btn btn-primary" data-toggle="modal"
        data-target="#changeOwnerModal{{questionbankentryid}}" {{#hidden}}style="display: none;{{/hidden}}">
    {{title}}
<!--    #pix i/group/pix-->
</button>

<!-- Modal -->
<div class="modal fade" id="changeOwnerModal{{questionbankentryid}}" data-backdrop="static" data-keyboard="false"
     tabindex="-1" aria-labelledby="changeOwnerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">"{{title}}"</h5>
                <button type="button" class="close btn-sm" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body col-auto">
                <h5>{{#str}}question, block_exaquest {{/str}} {{questionname}}</h5>
                <p>{{text}}</p>
                <div class="form-check{{questionbankentryid}}">
                    {{{ selectusers_autocomplete_html }}}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" value="{{action}}"
                        class="btn btn-primary changeowner{{questionbankentryid}} {{#require}}disable{{questionbankentryid}}{{/require}}">
                    Request
                </button>
            </div>
        </div>
    </div>
</div>