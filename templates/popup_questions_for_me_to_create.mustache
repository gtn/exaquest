<a class="btn btn-light w-100 d-flex justify-content-between align-items-center" data-toggle="modal"
   data-target="#questionsForMeToCreateModal">
    <span class="badge-outer text-center">
        <span class="badge badge-primary">{{questions_for_me_to_create_count}}</span>
    </span>
    <span class="flex-grow-1"> {{#str}}
        questions_for_me_to_create, block_exaquest {{/str}}</span>
</a>

<div class="modal fade" id="questionsForMeToCreateModal" tabindex="-1"
     aria-labelledby="questionsForMeToCreateModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{#str}}
                    questions_for_me_to_create, block_exaquest {{/str}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-body-requests">
            <p>{{#str}}
                questions_for_me_to_create, block_exaquest {{/str}}
                <br>
                {{#questions_to_create}}

                    <!--                        <br>-->
                    <!--                        <input type="checkbox" id={{id}} class="userselectioncheckbox"-->
                    <!--                               name="selectedusers[{{id}}]" value={{id}}>-->
                    <!--                        <label for="selectedusers[{{id}}]">{{comment}}</label>-->


                    <p class="request-comment" id="request-comment-p-{{id}}">
                        - {{comment}}
                        <a id="request-comment-a-{{id}}" class="mark-question-request-as-done-button"
                           href="#"
                           title="{{#str}} mark_as_done, block_exaquest {{/str}}"
                           requestid= {{id}}
                                   role="button"
                           aria-label="{{#str}} mark_as_done, block_exaquest {{/str}}">
                            <span class="normal-icon">{{#pix}} t/markasread, core {{/pix}}</span>
                        </a>
                    </p>

                    <!--                        <a href="#" class="mark-request-as-done-button">{{#pix}} t/markasread, core, mark as done {{/pix}}</a>-->
                {{/questions_to_create}}
                <div id="popup_create_questions_div"></div>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <!--                <input type="submit"-->
                <!--                       value="{{#str}} mark_selected_as_done_button, block_exaquest {{/str}}"-->
                <!--                       class="btn btn-primary mark-all-requests-as-done-button">-->
            </div>
        </div>
    </div>
</div>