                                <!--                                {{/popup_assign_gradeexam}}-->
                            <!--                            </td>-->
                            <td>
                                {{#popup_assign_check_exam_grading}}
                                    {{>block_exaquest/popup_assign_check_exam_grading}}
                                {{/popup_assign_check_exam_grading}}
                            </td>
                        </tr>
                    {{/finished_exams}}
                    </tbody>
                </table>
            </div>
    {{/viewfinishedexams}}

    {{#viewgradesreleasedexams}}
            <div class="examcard">
                <h4>{{#str}}exams_grades_released, block_exaquest {{/str}}</h4>
                <table>
                    <thead></thead>
                    <tbody>
                    {{#grading_released_exams}}
                        <tr>
                            <td>
                                <a class="link"
                                   href={{link_to_exam}}
