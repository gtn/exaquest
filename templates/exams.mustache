<div id="exaquest">
{{#capabilities}}
    {{#viewnewexamscard}}
        {{#createnewexam}}
                <a href="{{create_exam_link}}" type="submit" class="btn
            btn-secondary"
                   value="">{{#str}}create_new_exam_button, block_exaquest {{/str}}</a>
        {{/createnewexam}}
            <div class="examcard card">
                <h4>{{#str}}new_exams, block_exaquest {{/str}}</h4>
                <p>{{#str}}add_questions_to_these_exams, block_exaquest {{/str}}</p>
                <table class="examstable">
                    <thead></thead>
                    <tbody>
                    {{#new_exams}}
                        <tr>
                            <td>
                                {{#manageactivities}}
                                    <a class="link"
                                       href={{link_to_exam}}
                                    >
                                        {{name}} </a>
                                {{/manageactivities}}
                                {{^manageactivities}}
                                    {{name}}
                                {{/manageactivities}}
                            </td>
                            <td class="changestatus">
                                <!--                                <div class="button-container">-->
                                <a href="{{go_to_exam_questionbank}}&quizid={{quizid}}" type="submit" class="btn
                                btn-secondary"
                                value="">{{#str}}add_questions_to_quiz, block_exaquest {{/str}}</a>

                                {{>block_exaquest/button_go_to_exam_view}}

                                {{#sendexamtoreview}}

                                    {{>block_exaquest/button_send_exam_to_review}}

                                {{/sendexamtoreview}}

                                {{#fachlichreleaseexam}}

                                    {{>block_exaquest/button_fachlich_release_exam}}

                                {{/fachlichreleaseexam}}
                                <!--                            {{#skipandreleaseexam}}-->
                                <!--                                <td>-->
                                <!--                                    <button type="submit" class="btn btn-primary change-exam-status-button"-->
                                <!--                                            value="skipandrelease_exam" quizid={{quizid}} courseid={{courseid}}>Prüfung-->
                                <!--                                        finalisieren und freigeben-->
                                <!--                                    </button>-->
                                <!--                                </td>-->
                                <!--                            {{/skipandreleaseexam}}-->
                                {{#assignaddquestions}}

                                    {{#popup_assign_addquestions}}
                                        {{>block_exaquest/popup_assign_addquestions}}
                                    {{/popup_assign_addquestions}}

                                {{/assignaddquestions}}
                                {{#setquestioncount}}
                                    {{#popup_setquizquestioncount}}
                                        {{>block_exaquest/popup_setquizquestioncount}}
                                    {{/popup_setquizquestioncount}}
                                {{/setquestioncount}}
                                {{#forcesendexamtoreview}}
                                    {{>block_exaquest/button_force_send_exam_to_review}}
                                {{/forcesendexamtoreview}}
                                <!--                                </div>-->
                            </td>
                        </tr>
                    {{/new_exams}}
                    </tbody>
                </table>
            </div>
    {{/viewnewexamscard}}
    {{#viewcreatedexamscard}}
            <div class="examcard card">
                <h4>{{#str}}created_exams, block_exaquest {{/str}}</h4>
                <p>Diese Prüfungen wurden befüllt. Fachliche Begutachtung notwendig.</p>
                <table class="examstable">
                    <thead></thead>
                    <tbody>
                    {{#created_exams}}
                        <tr>
                            <td>
                                {{#manageactivities}}
                                    <a class="link"
                                       href={{link_to_exam}}
                                    >
                                        {{name}} </a>
                                {{/manageactivities}}
                                {{^manageactivities}}
                                    {{name}}
                                {{/manageactivities}}
                            </td>
                            <td class="changestatus">
                                {{>block_exaquest/button_go_to_exam_view}}

                                {{>block_exaquest/button_fachlich_release_exam}}

                                <button type="submit" class="btn btn-primary change-exam-status-button"
                                        value="request_revision" quizid={{quizid}} courseid={{courseid}}>{{#str}}send_exam_to_revise, block_exaquest {{/str}}
                                </button>
                            </td>
                        </tr>
                    {{/created_exams}}
                    </tbody>
                </table>
            </div>
    {{/viewcreatedexamscard}}
    {{#viewreleasedexamscard}}
            <div class="examcard card">
                <h4>{{#str}}fachlich_released_exams, block_exaquest {{/str}}</h4>
                <p>Diese Prüfungen wurden fachlich begutachtet.</p>
                <table class="examstable">
                    <thead></thead>
                    <tbody>
                    {{#fachlich_released_exams}}
                        <tr>
                            <td>
                                {{#manageactivities}}
                                    <a class="link"
                                       href={{link_to_exam}}
                                    >
                                        {{name}} </a>
                                {{/manageactivities}}
                                {{^manageactivities}}
                                    {{name}}
                                {{/manageactivities}}
                            </td>
                            <td class="changestatus">
                                {{>block_exaquest/button_go_to_exam_view}}

                                {{#doformalreviewexam}}
                                    <button type="submit" class="btn btn-primary change-exam-status-button"
                                            value="formal_release_exam" quizid={{quizid}} courseid={{courseid}}>Zur Durchführung
                                        freigeben
                                    </button>
                                {{/doformalreviewexam}}
                            </td>
                        </tr>
                    {{/fachlich_released_exams}}
                    </tbody>
                </table>
            </div>
    {{/viewreleasedexamscard}}
    {{#viewactiveexamscard}}


            <div class="examcard card">
                <h4>{{#str}}active_exams, block_exaquest {{/str}}</h4>
                <p>Fachlich und formal freigegebene Prüfungen. Diese sind aktiv. SuS können diese Prüfung
                    durchführen.</p>
                <table class="examstable">
                    <thead></thead>
                    <tbody>
                    {{#active_exams}}
                        <tr>
                            <td>
                                {{#manageactivities}}
                                    <a class="link"
                                       href={{link_to_exam}}
                                    >
                                        {{name}} </a>
                                {{/manageactivities}}
                                {{^manageactivities}}
                                    {{name}}
                                {{/manageactivities}}
                            </td>
                            <td class="changestatus">
                                <button type="submit" class="btn btn-primary change-exam-status-button"
                                        value="finish_exam" quizid={{quizid}} courseid={{courseid}}>Prüfung beenden
                                </button>
                            </td>
                        </tr>
                    {{/active_exams}}
                    </tbody>
                </table>
            </div>
    {{/viewactiveexamscard}}

    {{#viewfinishedexamscard}}
            <div class="examcard card">
                <h4>{{#str}}finished_exams, block_exaquest {{/str}}</h4>
                <p>Abgeschlossene Prüfungen.</p>
                <table class="examstable">
                    <thead></thead>
                    <tbody>
                    {{#finished_exams}}
                        <tr>
                            <td>
                                {{#manageactivities}}
                                    <a class="link"
                                       href={{link_to_exam}}
                                    >
                                        {{name}} </a>
                                {{/manageactivities}}
                                {{^manageactivities}}
                                    {{name}}
                                {{/manageactivities}}
                            </td>

                            <td class="changestatus">
                                {{#assigncheckexamgrading}}
                                    <!--show exam report for PK and StudMA. If you are able to assign someone to check grading you are also able to see the gradings/statistics -->
                                    {{#go_to_exam_report_overview}}
                                        {{>block_exaquest/button_go_to_exam_report_overview}}
                                    {{/go_to_exam_report_overview}}


                                    {{#popup_assign_check_exam_grading}}
                                        {{>block_exaquest/popup_assign_check_exam_grading}}
                                    {{/popup_assign_check_exam_grading}}

                                    {{#popup_assign_kommissionell_check_exam_grading}}
                                        {{>block_exaquest/popup_assign_kommissionell_check_exam_grading}}
                                    {{/popup_assign_kommissionell_check_exam_grading}}

                                {{/assigncheckexamgrading}}


                                {{#fp_assigned_to_check_grading}}
<!--if an FP is assigned to check the grading, the PK can release the grading instead -->
                                    <button type="submit" class="btn btn-secondary change-exam-status-button"
                                            value="release_grades_for_fp_as_pk" quizid={{quizid}} courseid={{courseid}}>Prüfungsbeurteilung anstelle des Fachlichen Prüfers
                                        freigeben
                                    </button>

                                {{/fp_assigned_to_check_grading}}


                                {{#assigned_to_check_grading}}

                                    <button type="submit" class="btn btn-primary change-exam-status-button"
                                            value="release_grades" quizid={{quizid}} courseid={{courseid}}>Prüfungsbeurteilung freigeben
                                    </button>

                                    {{#go_to_exam_report_overview}}
                                        {{>block_exaquest/button_go_to_exam_report_overview}}
                                    {{/go_to_exam_report_overview}}

                                    {{#go_to_exam_report_grading}}
                                        {{>block_exaquest/button_go_to_exam_report_grading}}
                                    {{/go_to_exam_report_grading}}

                                    {{#popup_assign_change_exam_grading}}
                                        {{>block_exaquest/popup_assign_change_exam_grading}}
                                    {{/popup_assign_change_exam_grading}}


                                    {{#popup_assign_check_exam_grading}}
                                        {{>block_exaquest/popup_assign_check_exam_grading}}
                                    {{/popup_assign_check_exam_grading}}

                                {{/assigned_to_check_grading}}

                                {{#assigned_to_kommissionell_check_grading}}

                                    {{#popup_kommissionell_exams_for_me_to_check_grading}}
                                        {{>block_exaquest/popup_kommissionell_exams_for_me_to_check_grading}}
                                    {{/popup_kommissionell_exams_for_me_to_check_grading}}
                                    <!--                                    <button type="submit" class="btn btn-primary change-exam-status-button"-->
                                    <!--                                            value="release_grades_for_student" quizid={{quizid}} courseid={{courseid}}>Kommissionelle Prüfungsbeurteilung...-->
                                    <!--                                    </button>-->

                                {{/assigned_to_kommissionell_check_grading}}


                                {{#assigngradeexam}}
                                    {{#popup_assign_gradeexam}}
                                        {{>block_exaquest/popup_assign_gradeexam}}
                                        <!--show exam report for PK and StudMA. If you are able to assign someone to check grading you are also able to see the gradings/statistics -->
                                        <!--only show it when there is something to grade ==> when popup_assign_gradeexam exists-->
                                        {{#go_to_exam_report_grading}}
                                            {{>block_exaquest/button_go_to_exam_report_grading}}
                                        {{/go_to_exam_report_grading}}
                                    {{/popup_assign_gradeexam}}
                                {{/assigngradeexam}}

                                {{#assigned_to_grade}}
                                    <!-- there is no mark_grade_request_as_done button yet, but the ability to add other persons for grading depends on being assigned to grade-->
                                    <!--                                add mark_grade_request_as_done button ?? ==> no, you can mark it as done in the dashboard or simply do it and it is marked as done automatically in the observer-->
                                    <!--  Similiar to the button with value "release_grades" here we have "grading finished" ? Would be a possibility, but for now no, because marking the grading as done does not make a lot of sense, it is shown in moodle when everything is graded anyways-->
                                    {{#go_to_exam_report_grading}}
                                        {{>block_exaquest/button_go_to_exam_report_grading}}
                                    {{/go_to_exam_report_grading}}

                                    {{#popup_assign_gradeexam}}
                                        {{>block_exaquest/popup_assign_gradeexam}}
                                    {{/popup_assign_gradeexam}}

                                {{/assigned_to_grade}}
                            </td>
                        </tr>
                    {{/finished_exams}}
                    </tbody>
                </table>
            </div>
    {{/viewfinishedexamscard}}

    {{#viewgradesreleasedexamscard}}
            <div class="examcard card">
                <h4>{{#str}}exams_grades_released, block_exaquest {{/str}}</h4>
                <table class="examstable">
                    <thead></thead>
                    <tbody>
                    {{#grading_released_exams}}
                        <tr>
                            <td>
                                {{#manageactivities}}
                                    <a class="link"
                                       href={{link_to_exam}}
                                    >
                                        {{name}} </a>
                                {{/manageactivities}}
                                {{^manageactivities}}
                                    {{name}}
                                {{/manageactivities}}
                            </td>
                            <!--                    <td class="changestatus"> -->
                            <!--                        <button type="submit" class="btn btn-primary change-exam-status-button"-->
                            <!--                                value="release_grades" quizid={{quizid}}>Noten freigeben-->
                            <!--                        </button>-->
                            <!--                    </td>-->
                        </tr>
                    {{/grading_released_exams}}
                    </tbody>
                </table>
            </div>
        </div>
    {{/viewgradesreleasedexamscard}}
{{/capabilities}}

