<div id="exaquest">
{{#capabilities}}
    {{#viewnewexams}}
            <a href="{{create_exam_link}}" type="submit" class="btn
            btn-secondary"
               value="">{{#str}}create_new_exam_button, block_exaquest {{/str}}</a>
            <div class="examcard">
                <h4>{{#str}}new_exams, block_exaquest {{/str}}</h4>
                <p>{{#str}}add_questions_to_these_exams, block_exaquest {{/str}}</p>
                <table>
                    <thead></thead>
                    <tbody>
                    {{#new_exams}}
                        <tr>
                            <td>
                                <a class="link"
                                   href="http://localhost/mod/quiz/view.php?id={{coursemoduleid}}"
                                >
                                {{name}} </a>
                            </td>
                            <td>
                                <a href="{{go_to_exam_questionbank}}&quizid={{quizid}}" type="submit" class="btn
                                btn-primary"
                                value="">{{#str}}add_questions_to_quiz, block_exaquest {{/str}}</a>
                            </td>
                            <td>
                                <a href="{{got_to_exam_view}}&quizid={{quizid}}" type="submit" class="btn btn-primary"
                                value="">{{#str}}check_added_questions, block_exaquest {{/str}}</a>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-primary change-exam-status-button"
                                        value="create_exam" quizid={{quizid}}>Prüfung zur Begutachtung schicken
                                </button>
                            </td>
                            <td>
                                {{#popup_assign_addquestions_fp}}
                                    {{>block_exaquest/popup_assign_addquestions}}
                                {{/popup_assign_addquestions_fp}}
                                <!--                                <button type="submit" class="btn btn-primary change-exam-status-button"-->
                                <!--                                        value="assign_fp_and_pmw" quizid={{quizid}}>Fachlichen Prüfer und Prüfungsmitwirkende hinzufügen-->
                                <!--                                </button>-->
                            </td>
                            <td>
                                {{#popup_assign_addquestions_pmw}}
                                    {{>block_exaquest/popup_assign_addquestions}}
                                {{/popup_assign_addquestions_pmw}}
                            </td>
                        </tr>
                    {{/new_exams}}
                    </tbody>
                </table>
            </div>
