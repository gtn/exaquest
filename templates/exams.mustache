<div id="exaquest">
{{#capabilities}}
    {{#viewnewexams}}
        {{#createnewexam}}
                <a href="{{create_exam_link}}" type="submit" class="btn
            btn-secondary"
                   value="">{{#str}}create_new_exam_button, block_exaquest {{/str}}</a>
        {{/createnewexam}}
            <div class="examcard">
                <h4>{{#str}}new_exams, block_exaquest {{/str}}</h4>
                <p>{{#str}}add_questions_to_these_exams, block_exaquest {{/str}}</p>
                <table>
                    <thead></thead>
                    <tbody>
                    {{#new_exams}}
                        <tr>
                            <td>
                                <a class="link"
                                   href={{link_to_exam}}
                                >
                                    {{name}} </a>
                            </td>
                            <td>
                                <a href="{{go_to_exam_questionbank}}&quizid={{quizid}}" type="submit" class="btn
                                btn-primary"
                                value="">{{#str}}add_questions_to_quiz, block_exaquest {{/str}}</a>
                            </td>
                            <td>
                                <a href="{{got_to_exam_view}}&quizid={{quizid}}" type="submit" class="btn btn-primary"
                                value="">{{#str}}check_added_questions, block_exaquest {{/str}}</a>
                            </td>
                            {{#sendexamtoreview}}
                                <td>
                                    <button type="submit" class="btn btn-primary change-exam-status-button"
                                            value="send_exam_to_review" quizid={{quizid}} courseid={{courseid}}>{{#str}}send_exam_to_review, block_exaquest {{/str}}
                                    </button>
                                </td>
                            {{/sendexamtoreview}}
                            {{#fachlichreleaseexam}}
                                <td>
                                    <button type="submit" class="btn btn-primary change-exam-status-button"
                                            value="fachlich_release_exam" quizid={{quizid}} courseid={{courseid}}>{{#str}}fachlich_release_exam, block_exaquest {{/str}}
                                    </button>
                                </td>
                            {{/fachlichreleaseexam}}
                            {{#skipandreleaseexam}}
                                <td>
                                    <button type="submit" class="btn btn-primary change-exam-status-button"
                                            value="skipandrelease_exam" quizid={{quizid}} courseid={{courseid}}>Prüfung
                                        finalisieren und freigeben
                                    </button>
                                </td>
                            {{/skipandreleaseexam}}
                            {{#assignaddquestions}}
                                <td>
                                    {{#popup_assign_addquestions}}
                                        {{>block_exaquest/popup_assign_addquestions}}
                                    {{/popup_assign_addquestions}}
                                </td>
                            {{/assignaddquestions}}
                            {{#setquestioncount}}
                                <td>
                                    {{#popup_setquizquestioncount}}
                                        {{>block_exaquest/popup_setquizquestioncount}}
                                    {{/popup_setquizquestioncount}}
                                </td>
                            {{/setquestioncount}}
                        </tr>
                    {{/new_exams}}
                    </tbody>
                </table>
            </div>
    {{/viewnewexams}}
    {{#viewcreatedexams}}
            <div class="examcard">
                <h4>{{#str}}created_exams, block_exaquest {{/str}}</h4>
                <p>Diese Prüfungen wurden befüllt. Fachliche Begutachtung notwendig.</p>
                <table>
                    <thead></thead>
                    <tbody>
                    {{#created_exams}}
                        <tr>
                            <td>
                                <a class="link"
                                   href={{link_to_exam}}
                                >
                                    {{name}} </a>
                            </td>
                            <td>
                                <a href="{{got_to_exam_view}}&quizid={{quizid}}" type="submit" class="btn
                                btn-primary"
                                value="">{{#str}}check_added_questions, block_exaquest {{/str}}</a>
                            </td>
                            <td>
                                <!--                    <input type="submit" class="btn btn-primary" value="Prüfung fachlich freigeben">-->
                                <button type="submit" class="btn btn-primary change-exam-status-button"
                                        value="fachlich_release_exam" quizid={{quizid}} courseid={{courseid}}>{{#str}}fachlich_release_exam, block_exaquest {{/str}}
                                </button>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-primary change-exam-status-button"
                                        value="request_revision" quizid={{quizid}} courseid={{courseid}}>Prüfung zur
                                    Überarbeitung
                                    zurückschicken
                                </button>
                            </td>
                        </tr>
                    {{/created_exams}}
                    </tbody>
                </table>
            </div>
    {{/viewcreatedexams}}
    {{#viewreleasedexams}}
            <div class="examcard">
                <h4>{{#str}}fachlich_released_exams, block_exaquest {{/str}}</h4>
                <p>Diese Prüfungen wurden fachlich begutachtet.</p>
                <table>
                    <thead></thead>
                    <tbody>
                    {{#fachlich_released_exams}}
